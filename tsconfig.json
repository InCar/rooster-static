{
  "compilerOptions": {
    "module": "amd",
    "lib": [ "es2015", "dom" ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src/js"
  },
  "include": ["src/js"]
}